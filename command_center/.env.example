# Firebase Configuration
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=your_auth_domain_here
FIREBASE_DATABASE_URL=your_database_url_here
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_STORAGE_BUCKET=your_storage_bucket_here
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
FIREBASE_APP_ID=your_app_id_here

# Firebase Database Legacy Token (for server-side access)
FIREBASE_DATABASE_SECRET=your_database_secret_here

# Application Configuration
APP_NAME=Disaster Management Admin Panel
APP_VERSION=1.0.0
NODE_ENV=development

# Set to 'true' to enable DevTools in development mode
ENABLE_DEV_TOOLS=false
LOG_LEVEL=info

# Database Configuration
DB_CONNECTION_TIMEOUT=30000
DB_RETRY_ATTEMPTS=3

# User Session Configuration
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5

# Notification Settings
EMAIL_NOTIFICATIONS=true
PUSH_NOTIFICATIONS=true

# Alert Thresholds
ALERT_THRESHOLD_TEMPERATURE=35
ALERT_THRESHOLD_PRESSURE=1000
ALERT_THRESHOLD_ACCELERATION=1.5
